<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/FL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="417dp"
            android:layout_height="702dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/background"/>




        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_worker"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أحمد فارس(عميل)"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="100dp"
            android:fontFamily="@font/monadi"/>




        <FrameLayout
            android:id="@+id/FL2"
            android:layout_width="340dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_view"
            >
            <ListView
                android:id="@+id/LV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ProgressBar
                android:id="@+id/pBar1"
                style="?android:attr/progressBarStyle"
                android:layout_width="112dp"
                android:layout_height="113dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="40dp"
                android:indeterminateDrawable="@drawable/pr_colorr" />


            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/monadi"
                android:text="أسم العامل :"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/monadi"
                android:text="أحمد فارس سعد"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/monadi"
                android:text="رقم السلة :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/monadi"
                android:text="25"
                android:textSize="14sp" />



            <RatingBar
                android:id="@+id/RB1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="20dp"
                android:numStars="4"
                android:rating="0"
                android:stepSize="0.5"/>





        </FrameLayout>



    </FrameLayout>

</RelativeLayout>